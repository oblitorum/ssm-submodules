#!/bin/bash

set -o errexit
set -o xtrace

. $(dirname $0)/vars

PACKAGES=("${packages[@]}")

usage () {
    cat <<EOF
Usage: $0 [OPTIONS] [PACKAGES]

    The following options may be given:
        --help) usage ;;

    The following packages may be given:
        ${packages[@]}

Example $0 ssm-client ssm-dashboards
EOF
        exit 1
}

shell_quote_string() {
  echo "$1" | sed -e 's,\([^a-zA-Z0-9/_.=-]\),\\\1,g'
}

build_srpms() {
    docker run --rm -e ENV_DEV -v ${root_dir}:/home/builder/ssm-submodules ${rpmbuild_docker_image} sh -c "
        set -o errexit
        set -o xtrace

        pids=()
        for package in $(echo ${PACKAGES[@]}); do
            /home/builder/ssm-submodules/build/bin/build-srpm \${package} & pids+=(\$!)
        done
        for pid in \"\${pids[@]}\"; do
            wait \"\${pid}\"
        done

        # give host user permission
        find /home/builder/ssm-submodules/{logs,docs,tmp} -type d -exec chmod 0777 {} \;
        find /home/builder/ssm-submodules/{logs,docs,tmp} -type f -exec chmod 0666 {} \;
        find /home/builder/ssm-submodules/results/SRPMS -type d -exec chmod 0777 {} \;
        find /home/builder/ssm-submodules/results/SRPMS -type f -exec chmod 0666 {} \;
    "
}

main() {
    declare -a TMP_PACKAGES

    for arg do
        val=`echo "$arg" | sed -e 's;^--[^=]*=;;'`
        case "$arg" in
            --help)         usage ;;
            -*)             usage ;;
            *)              TMP_PACKAGES+=(`shell_quote_string "$arg"`) ;;
        esac
    done

    if [ ${#TMP_PACKAGES[@]} -gt 0 ]; then
        PACKAGES=("${TMP_PACKAGES[@]}")
    fi

    if [[ -n "${WITHOUT_DOCKER}" ]] && [[ ${WITHOUT_DOCKER} -eq 1 ]]; then
        local pids=()
        for package in ${PACKAGES[@]}; do
            ${bin_dir}/build-srpm ${package} & pids+=($!)
        done
        for pid in "${pids[@]}"; do
            wait "${pid}"
        done
    else
        # give docker container user permission
        mkdir -vp ${root_dir}/{results,docs,logs,tmp}
        mkdir -vp ${root_dir}/results/SRPMS
        find ${root_dir}/{logs,docs,tmp} -type d -exec chmod 0777 {} \;
        find ${root_dir}/{logs,docs,tmp} -type f -exec chmod 0666 {} \;
        find ${root_dir}/results/SRPMS -type d -exec chmod 0777 {} \;
        find ${root_dir}/results/SRPMS -type f -exec chmod 0666 {} \;

        build_srpms
    fi
}

main $@